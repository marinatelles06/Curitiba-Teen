<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="css/style.css" />
    <link rel="stylesheet" href="css/posts.css" />
  </head>

  <body>
    <div class="navbartodososposts">
      <br />
      <img src="imgs/logobranco.png" class="logobrancotodos" />

      <div class="divnav">
        <a href="/novopost">
          <button class="botaonavtodos">Criar novo Post</button></a
        >
      

        <a href="/"> <button class="botaonavtodos">Home Page</button></a>
      </div>
    </div>

    <div class="posts">
      <% posts.forEach(post=> { %>
      <div class="post" data-category="<%=post.category%>">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          height="48"
          viewBox="0 -960 960 960"
          width="48"
          onclick="deletePost('<%=post.createdAt%>')"
        >
          <path
            d="M261-120q-24.75 0-42.375-17.625T201-180v-570h-41v-60h188v-30h264v30h188v60h-41v570q0 24-18 42t-42 18H261Zm438-630H261v570h438v-570ZM367-266h60v-399h-60v399Zm166 0h60v-399h-60v399ZM261-750v570-570Z"
          />
        </svg>
        <p class="titulo_post"><%=post.title%></p>
        <p class="body"><%=post.body%></p>
        <p class="category"><%=post.category%></p>
      </div>
      <%});%>
    </div>

    <script src="js/script.js"></script>
  </body>
</html>
